@{
}
@model LibraryManagementWebApp.Models.BorrowedBook

<h1>Edit Records</h1>

@if (Model is null)
{
    <p>No borrow record was found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Borrow Id</label>
            <input type="text" class="form-control" asp-for="BorrowId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Studen ID</label>
            <input type="text" class="form-control" asp-for="StudentId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Book Id</label>
            <input type="text" class="form-control" asp-for="BookId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Borrow Date</label>
            <input type="datetime" class="form-control" asp-for="BorrowDate" readonly />
        </div>
        <div class="mt-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="Returned" checked="checked" />
            <label class="form-check-label">Returned</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary ms-2" href="javascript:history.back()">Go Back</a>
        </div>
    </form>

}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}



