@{
}
@model LibraryManagementWebApp.Models.Entities.Book

<h1>Edit Books</h1>

@if (Model is null)
{
    <p>No books was found with this Id</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">User Id</label>
            <input type="text" class="form-control" asp-for="BookId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Book Title</label>
            <input type="text" class="form-control" asp-for="BookTitle"  />
        </div>

        <div class="mt-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>
        <div class="form-group">
            <label for="genre">Genre</label>
            <select class="form-control" id="genre" name="genre" asp-for="Genre" required>
                <option value="Fiction">Fiction</option>
                <option value="Educational Resources">Educational Resources</option>
               
                <option value="Nonfiction">Nonfiction</option>
                <option value="Poetry">Poetry</option>
                <option value="Miscellaneous">Miscellaneous</option>
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">Availability </label>
            <div class="form-row">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="true" asp-for="Available" checked>
                    <label class="form-check-label" for="available">
                        Available
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="false" asp-for="Available">
                    <label class="form-check-label" for="notAvailable">
                        Not Available
                    </label>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button><a class="btn btn-secondary ms-2" href="javascript:history.back()">Go Back</a>

           
        </div>
    </form>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}



