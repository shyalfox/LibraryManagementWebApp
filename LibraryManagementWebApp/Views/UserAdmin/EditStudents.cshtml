@{
}
@model LibraryManagementWebApp.Models.Entities.Student

<h1>Edit Students</h1>
@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">User Id</label>
            <input type="text" class="form-control" asp-for="UserId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Student Id</label>
            <input type="text" class="form-control" asp-for="StudentId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" asp-for="StudentName" />
        </div>
        <div class="mt-3">
            <label class="form-label"> Email Adress</label>
            <input type="text" class="form-control" asp-for="StudentEmail" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="DeleteStudents" asp-controller="UserAdmin" > Delete</button>
        </div>
    </form>
}




