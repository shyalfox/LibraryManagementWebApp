@model LibraryManagementWebApp.Models.Entities.Admin

<h1>Edit Admins</h1>
@if (Model is null)
{
    <p>No Admin was found with this Id</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">User Id</label>
            <input type="text" class="form-control" asp-for="UserId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Admin Id</label>
            <input type="text" class="form-control" asp-for="AdminId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" asp-for="AdminName" />
        </div>
        <div class="mt-3">
            <label class="form-label"> Email Adress</label>
            <input type="text" class="form-control" asp-for="AdminEmail" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="DeleteAdmin" asp-controller="UserAdmin"> Delete</button>
        </div>
    </form>
}




