@model LibraryManagementWebApp.Models.AddUserAdminViewModel

<h1>Add Users</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" />
    </div>
    <div class="mt-3">
        <label class="form-label">New Password</label>
        <input type="text" class="form-control" asp-for="PasswordHash" />
    </div>
    <div class="mt-3">
        <label class="form-label">Role</label>
        <select class="form-control" asp-for="Role">
            <option value="Admin">Admin</option>
            <option value="Student">Student</option>
         
        </select>
    </div>
    
    <div class="mt-3">
        <label class="form-label"> Email Adress</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>


